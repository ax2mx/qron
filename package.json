{
  "name": "qron",
  "version": "1.0.0",
  "description": "Simple stopwatch and timer application",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf export",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "mincss": "foreach -g \"export/css/**/*.css\" -x \"cleancss --level 1 #{path} -o #{path}\" min --no-c",
    "zip": "zip -r export/bundle.zip export/**",
    "prod": "npm-run-all --serial clean build mincss zip ",
    "dev": "npm-run-all --parallel start watch",
    "start": "serve src"
  },
  "author": "Andrei Marukhin",
  "license": "ISC",
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "css-minify": "^1.0.1",
    "foreach-cli": "^1.8.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.11",
    "rollup-plugin-analyzer": "^3.3.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy-assets": "^2.0.1",
    "rollup-plugin-generate-html-template": "^1.7.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.1",
    "serve": "^11.3.2"
  }
}
